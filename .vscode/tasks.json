{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "g++.exe", // use g++ declared in your environment PATH
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",// add active file
        "${workspaceFolder}/src/*.cpp",
        //include path
        "-I",
        "${workspaceFolder}/include",
        "-o",
        "${workspaceFolder}/exe/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}